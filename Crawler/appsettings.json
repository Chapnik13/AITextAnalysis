{
  "Logging": {
    "WriteToConsole": true,
    "MinimumConsoleLevel": "Information",
    "FilePath": "Logs.txt",
    "MinimumFileLevel": "Debug"
  },
  "DataFiles": {
    "WordsCountMatrix": "data/DataUKUS2014-2017.csv",
    "EmotionsFile": "data/Emotion.csv",
    "NumbersFile": "data/Numbers.csv",
    "QuestionsFile": "data/Questions.csv"
  },
  "WordsCountThresholds": {
    "NormalWordsThreshold": 50,
    "CommonWordsThreshold": 1000
  },
  "Lexer": {
    "TokensDefinitions": [
      {
        "TokenType": "StringValue",
        "Pattern": "^[A-Za-z]+"
      },
      {
        "TokenType": "Number",
        "Pattern": "^[0-9]+"
      },
      {
        "TokenType": "Punctuation",
        "Pattern": "^[,\\.?!\"-:]"
      }
    ]
  },
  "Scrapers": {
    "ScrapesrDefinitions": [
      {
        "Selector": "div#text p, p#first",
        "Pattern": "sciencedaily"
      },
      {
        "Selector": "div.story-body__inner p",
        "Pattern": "bbc"
      }
    ]
  }
}